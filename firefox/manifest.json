{
    "manifest_version": 2,
    "name": "QR Continue",
    "version": "1.0",
    "description": "Generatese a QR Code linking to the current page.",
    "icons": {
        "48": "icons/qrcode-solid.svg"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "js": [
                "qr.js"
            ]
        }
    ],
    "permissions": [
        "activeTab"
    ],
    "browser_action": {
        "default_icon": "icons/qrcode-solid.svg",
        "default_title": "QR Continue",
        "default_popup": "qr.html"
    }
}

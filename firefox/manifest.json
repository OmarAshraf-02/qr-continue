{
    "manifest_version": 3,
    "name": "QR Continue",
    "version": "1.0",
    "description": "Generates a QR Code linking to the current page.",
    "icons": {
        "48": "icons/qrcode-solid.svg"
    },
    "host_permissions": [
        "<all_urls>"
    ],
    "permissions": [
        "activeTab"
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "qrcontinue@omarashraf.dev"
        }
    },
    "action": {
        "default_icon": "icons/qrcode-solid.svg",
        "default_title": "QR Continue",
        "default_popup": "qr.html"
    }
}
